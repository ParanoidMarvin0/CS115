#ifndef DATE_H
#define DATE_H

class Date
{
private:
  int day, month, year;
  
public:
  Date();
  Date(int aMonth, int aDay, int aYear);
  void setMonth();
  void setDay();
  void setYear();
  int getMonth() const;
  int getDay() const;
  int getYear() const;
  void printDate() const;
  bool sameMonth(const Date & aDate) const;

  
};
